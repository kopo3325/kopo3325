# 소수 판별 프로그램

def check_prime_num(x):  #소수 판별 함수 입력
  for i in range(2, x):   
    if x < 0 or x % i == 0:
      #x가 i로 나누어 떨어지면 실행하기
      return False
  return True

try:
    number = float(input('판별할 자연수를 입력하세요:'))
    if number != int(number):  # 실수 예외 처리
        print('자연수를 입력하세요.')
    else:
        number = int(number)
        if number < 0:
            print('자연수를 입력하세요.')
        else:
            print(check_prime_num(number))
except ValueError:
    print('자연수를 입력해주세요.')      
