#include <stdio.h>

int Fibonacci(int n) {
    if (n == 0) {
        return 0;
    } else if (n <= 1) {
        return 1;
    } else {
        return Fibonacci(n - 1) + Fibonacci(n - 2);
    }    
}

void sum(int n) { //수열과 합 구하는 함수
    int sum = 0;
    for (int i = 1; i <= n; i++) {
        printf("%d ", Fibonacci(i));
        sum += Fibonacci(i);
    }
    printf("\n합 : %d\n", sum);
}

void oddeven(int n) { //홀/짝 구별하는 함수 
    int odd = 0;
    int even = 0;
    for (int i = 1; i <= n; i++) {
        if (Fibonacci(i) % 2 == 0) {
            even++;
        } else {
            odd++;
        }
    }
    printf("홀/짝: %d/%d\n", odd, even);
}    

int main(void) {
    int n;
    printf("입력값: ");
    scanf("%d", &n);
    sum(n);
    oddeven(n);

    return 0;
}
