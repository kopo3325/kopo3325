#include <stdio.h>

void main() {
    float a;
    float b;
    float c;
    
    printf("첫번째 숫자 입력: ");
    scanf("%f", &a);
    
    printf("두번째 숫자 입력: ");
    scanf("%f", &b);
    
    printf("세번째 숫자 입력: ");
    scanf("%f", &c);
    
    if (c == 0) {
        printf("나누기 값에 0을 대입할 수 없습니다.");
    } else {
        printf("연산 결과: %f", (a + b) * c - (a - b) / c);
    } 
}
