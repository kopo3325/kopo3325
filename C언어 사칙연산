#include <stdio.h>

void main() {
    float a;
    float b;
    float c;
    
    scanf("%f", &a);
    scanf("%f", &b);
    scanf("%f", &c);
    
    if (c > 0) {
        printf("연산 결과: %f", (a + b) * c - (a - b) / c);
    } else if (c == 0) {
        printf("나누기 값에 0을 대입할 수 없습니다.");
    } else {
        printf("연산 결과: %f", (a + b) * c - (a - b) / c);
    }
}
