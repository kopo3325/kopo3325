#include <stdio.h>
#include <stdlib.h> //rand, srand 함수수
#include <time.h> //시간 함수
#include <unistd.h> //sleep 함수

int main() {
    
    int i;
    int j;
    int temp;
    int num[6]; //6개의 번호를 저장할 배열
    
    srand(time(NULL)); //매초 마다 새로운 시드를 만들어서 
                       //1초 단위로 실행하면 매번 다른 난수가 생성됨
    for (i = 0; i < 6; i++) {
        num[i] = (int)(rand() % 45) + 1; //45로 나눈 나머지는 항상 0~44
        for (j = 0; j < i; j++) {
            if(num[i] == num[j]) {
                i--; //중복된 경우 빼주기
                break;
            }
        }
    }
    
    for (i = 0; i < 6; i++) {
        for (j = i + 1; j < 6; j++) {
            if (num[i] > num[j]) { //앞자리수가 뒷자리수보다 크면
                temp = num[i];
                num[i] = num[j];
                num[j] = temp; //temp 임시변수를 사용하여 자리 바꿔줌
            }
        }
    }
    
    for ( i = 0; i < 6; i++) {
        printf("%d\n", num[i]);
        sleep(1); //1초에 한개씩 출력되게 하기
    }
    return 0;
}
